startPin = 38
aPin = 39
bPin = 40
cPin = 41


fn clearResults () {

sendResult "a" 0
sendResult "b" 0
sendResult "c" 0
}







originalTime = 0


when ( read startPin ) {

clearResults ()

originalTime = now

}

when ( read aPin ) {

sendResult "a" (originalTime - now)

}

when ( read bPin ) {

sendResult "b" (originalTime - now)

}
when ( read cPin ) {

sendResult "c" (originalTime - now)

}



